<h1>Listing pages</h1>

<% for page in @pages %>
    <h2><%=h page.title %></h2>
    <p><%=h page.body %></p>
    <p><%=h page.published %></p>
    <p><%= link_to 'Show', page %></p>
    <p><%= link_to 'Edit', edit_page_path(page) %></p>
    <p><%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete %></p>
<% end %>

<br />

